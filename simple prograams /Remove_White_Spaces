//  Method 2  : to remove white spaces using replaceAll() method\

import java.util.Scanner;
public class Remove_White_Spaces {
    public static void main(String[] args)
    {
        // CREATING OBJECT
        Scanner sc = new Scanner(System.in);
        // TAKING INPUT STRING FORM USER
        System.out.print("Enter a string : ");
        String s= sc.nextLine();
        // USING OF PRE-DEFINED METHOD
        // WHITE SPACES REMOVED USING REGEX
        String str = s.replaceAll("\\s+", "");
        // PRINTING THE WHITE SPACE ELEMINATED STRING
        System.out.println("After remove White Space Sting Is : " + str);
    }
}
